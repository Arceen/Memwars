<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Add the gradient background -->
    <ImageView
        android:id="@+id/gradientImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_background"
         />

    <!-- Add your logo or image here -->
    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemWars"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        android:fontFamily="@font/borel_regular"
        />

    <Button
        android:id="@+id/LoginButton1"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/logoTextView"
        android:layout_marginTop="120dp"
        android:text="Login"

        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:letterSpacing=".2"
        android:elevation="8dp"
        android:alpha="1"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poiret_one_regular"
        />

    <Button
        android:background="@drawable/button_border"

        android:textSize="24sp"
        android:id="@+id/RegisterButton1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/LoginButton1"
        android:layout_marginTop="32dp"
        android:text="Register"

        android:textColor="#fff"
        android:textStyle="bold"
        android:letterSpacing=".2"

        android:elevation="16dp"
        android:alpha="1"

        android:fontFamily="@font/poiret_one_regular"
        />
</RelativeLayout>
